<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
	android:text="Welcome to SoundCloudDroid 0.1 alpha.\n This release is meant only for alpha testing.  You should be able to:\n* authorize the app by logging into SoundCloud\n* upload a file to SoundCloud\n* get your username from SoundCloud\n Please report any problems or feature requests using the MENU."
	android:textAppearance="?android:attr/textAppearanceSmall"
/>
<CheckBox
	android:id="@+id/access_token_status"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
	android:text="Authorized"
	android:clickable ="false"
/>
<Button
	android:id="@+id/authorize_button"
	android:text="Click here to (re)authorize"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
	/>
<Button
	android:id="@+id/upload_button"
	android:text="Choose and upload file to SoundCloud"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
	/>
<Button
	android:id="@+id/me_button"
	android:text="Retrieve information about me"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
	/>
</LinearLayout>
